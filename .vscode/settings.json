{ 
  "editor.rulers": [
    120
  ],
  "prettier.printWidth": 120,

  "prettier.singleQuote": true,
  "prettier.semi": false,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off"
  }
}
